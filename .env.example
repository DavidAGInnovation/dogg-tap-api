NODE_ENV=development
PORT=3000

# Shared secret to verify HMAC of requests
HMAC_SECRET=replace-with-strong-secret

# Redis connection
REDIS_URL=redis://localhost:6379/0

# MySQL connection
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=example
MYSQL_DATABASE=tap_api

# Tapping rules
DAILY_TAP_CAP=200
AWARD_EVERY_N_TAPS=10

# TON settings
TON_ENDPOINT_URL=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=
TON_MNEMONIC="word1 word2 ... word24"
TON_WALLET_WORKCHAIN=0

# Dry run for payouts (no real chain calls)
DRY_RUN=true

# Local testing shortcuts
# If true, uses an in-memory Redis mock (no external Redis needed)
USE_INMEMORY=false
# If true, MySQL interactions are skipped (no external MySQL required)
SKIP_MYSQL=false
